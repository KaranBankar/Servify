<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".EditServiceActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/_5sdp"

                >
                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:src="@drawable/arrow"
                    />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:src="@drawable/customerservice"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit Your Service"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_gravity="left"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:textSize="@dimen/_18sdp"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_margin="@dimen/_10sdp"
                android:layout_height="@dimen/_2sdp"
                android:backgroundTint="@color/black"
                android:background="@color/black"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Name"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_gravity="left"
                android:layout_marginLeft="@dimen/_20sdp"
                android:textSize="@dimen/_13sdp"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_8sdp"
                app:strokeColor="@color/blue"
                android:backgroundTint="@color/white"
                app:cardElevation="@dimen/_5sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:src="@drawable/uuesr"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_10sdp"/>

                    <EditText
                        android:id="@+id/et_Name"
                        android:textColor="@color/black"
                        android:text="Chaitany Kakde"
                        android:drawableRight="@drawable/edit"
                        android:paddingRight="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_10sdp"

                        android:background="#00000000"
                        />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Mobile"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_gravity="left"
                android:layout_marginLeft="@dimen/_20sdp"
                android:textSize="@dimen/_13sdp"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_8sdp"
                app:strokeColor="@color/blue"
                android:backgroundTint="@color/white"
                app:cardElevation="@dimen/_5sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:src="@drawable/call"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_10sdp"/>

                    <EditText
                        android:id="@+id/et_mobile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="9322067937"
                        android:drawableRight="@drawable/edit"
                        android:paddingRight="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:hint="+91 XXXX XX XXXX"
                        android:background="#00000000"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Email"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_gravity="left"
                android:layout_marginLeft="@dimen/_20sdp"
                android:textSize="@dimen/_13sdp"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_8sdp"
                app:strokeColor="@color/blue"
                android:backgroundTint="@color/white"
                app:cardElevation="@dimen/_5sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:src="@drawable/mmail"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_10sdp"/>

                    <EditText
                        android:id="@+id/et_email"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="chaitany@gamil.com"
                        android:drawableRight="@drawable/edit"
                        android:paddingRight="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_10sdp"

                        android:background="#00000000"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Business Title"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_gravity="left"
                android:layout_marginLeft="@dimen/_20sdp"
                android:textSize="@dimen/_13sdp"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_8sdp"
                app:strokeColor="@color/blue"
                android:backgroundTint="@color/white"
                app:cardElevation="@dimen/_5sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:src="@drawable/business"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_10sdp"/>

                    <EditText
                        android:id="@+id/et_businessName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Agri Vision"
                        android:drawableRight="@drawable/edit"
                        android:paddingRight="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:hint="Business Name"
                        android:background="#00000000"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Business Description"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_gravity="left"
                android:layout_marginLeft="@dimen/_20sdp"
                android:textSize="@dimen/_13sdp"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_8sdp"
                app:strokeColor="@color/blue"
                android:backgroundTint="@color/white"
                app:cardElevation="@dimen/_5sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:src="@drawable/description"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_10sdp"/>

                    <EditText
                        android:id="@+id/et_businessDescription"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="For farmers"
                        android:drawableRight="@drawable/edit"
                        android:paddingRight="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:hint="Business Descrition"
                        android:background="#00000000"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Address"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_gravity="left"
                android:layout_marginLeft="@dimen/_20sdp"
                android:textSize="@dimen/_13sdp"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_8sdp"
                app:strokeColor="@color/blue"
                android:backgroundTint="@color/white"
                app:cardElevation="@dimen/_5sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:src="@drawable/address"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_10sdp"/>

                    <EditText
                        android:id="@+id/et_Address"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="At Sambhjinagar"
                        android:drawableRight="@drawable/edit"
                        android:paddingRight="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:hint="Address With pin code"
                        android:background="#00000000"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change Your Business Image"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_gravity="left"
                android:layout_marginLeft="@dimen/_20sdp"
                android:textSize="@dimen/_13sdp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="@dimen/_32sdp"
                    app:cardCornerRadius="@dimen/_5sdp"
                    android:backgroundTint="@color/blue"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_5sdp">

                    <TextView
                        android:id="@+id/tv_upload"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Upload New"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_13sdp"/>
                </androidx.cardview.widget.CardView>

                <ImageView
                    android:id="@+id/et_businessImage"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:src="@drawable/image"
                    android:layout_marginTop="@dimen/_13sdp"
                    android:layout_marginLeft="@dimen/_5sdp"/>
            </LinearLayout>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Password"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_gravity="left"
                android:layout_marginLeft="@dimen/_20sdp"
                android:textSize="@dimen/_13sdp"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_8sdp"
                app:strokeColor="@color/blue"
                android:backgroundTint="@color/white"
                app:cardElevation="@dimen/_5sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:src="@drawable/psss"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_10sdp"/>

                    <EditText
                        android:id="@+id/et_Password"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Chai.,@123"
                        android:drawableRight="@drawable/edit"
                        android:paddingRight="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:hint="Set Password"
                        android:background="#00000000"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/layout_save_deatails"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginLeft="@dimen/_40sdp"
                android:layout_marginRight="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_15sdp"
                app:cardCornerRadius="@dimen/_8sdp"
                app:strokeColor="@color/blue"
                android:backgroundTint="@color/blue"
                app:cardElevation="@dimen/_5sdp">

                <TextView
                    android:id="@+id/btn_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Save Details"
                    android:fontFamily="sans-serif-black"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:textStyle="normal"
                    android:textSize="@dimen/_12sdp"/>

            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>
    </ScrollView>

</LinearLayout>