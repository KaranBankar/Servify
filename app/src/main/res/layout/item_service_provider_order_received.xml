<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:padding="16dp"
    android:orientation="vertical">



    <!-- Profile Image -->

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_8sdp"
        app:strokeColor="@color/blue"
        android:backgroundTint="@color/white"
        app:cardElevation="@dimen/_5sdp">





           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:padding="@dimen/_10sdp"
               android:orientation="horizontal">



               <ImageView
                   android:id="@+id/ivProfile"
                   android:layout_width="@dimen/_70sdp"
                   android:layout_gravity="center"
                   android:src="@drawable/ordersreceived"
                   android:layout_height="@dimen/_50sdp"
                   android:layout_marginTop="-2dp"
                   android:layout_marginBottom="-2dp"
                   android:layout_marginEnd="10dp"
                   android:scaleType="centerCrop" />

               <!-- Text Content -->
               <LinearLayout
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:orientation="vertical">

                   <!-- Name -->
                   <!-- Business Title -->
                   <TextView
                       android:id="@+id/tvBusinessTitle"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginBottom="4dp"
                       android:layout_marginTop="@dimen/_5sdp"
                       android:textStyle="bold"
                       android:textSize="@dimen/_13sdp"
                       android:textColor="@color/black"
                       tools:text="Plumber" />

                   <TextView
                       android:id="@+id/tvUserName"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginBottom="4dp"
                       android:textSize="@dimen/_12sdp"
                       android:textColor="@android:color/black"
                       android:textStyle="bold"
                       tools:text="John Doe" />

                   <!-- Business Description -->

                   <!-- Mobile Number -->
                   <TextView
                       android:id="@+id/tvUserMobile"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginBottom="4dp"
                       android:textSize="14sp"
                       android:textColor="@android:color/black"
                       tools:text="Mobile: +1234567890" />

                   <!-- Email -->


                   <!-- Address -->
                   <TextView
                       android:id="@+id/tvAddress"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:textSize="14sp"
                       android:textColor="@android:color/black"
                       android:layout_marginBottom="@dimen/_5sdp"
                       tools:text="Address: 123 Main St, City, Country" />
                   <TextView
                       android:id="@+id/tvPaymentStatus"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:textSize="14sp"
                       android:textColor="@android:color/black"
                       android:layout_marginBottom="@dimen/_5sdp"
                       tools:text="Cash on Delievry" />

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal"
                       android:weightSum="2">
                       <com.google.android.material.card.MaterialCardView
                           android:id="@+id/carviewSnap"
                           android:layout_margin="@dimen/_3sdp"
                           android:layout_width="@dimen/_150sdp"
                           android:layout_height="@dimen/_25sdp"
                           android:padding="@dimen/_5sdp"
                           app:cardCornerRadius="@dimen/_5sdp"
                           app:strokeColor="@color/blue"
                           android:backgroundTint="#F44336"
                           android:layout_marginBottom="@dimen/_10sdp"
                           android:layout_weight="1"
                           app:cardElevation="@dimen/_5sdp">

                           <TextView
                               android:id="@+id/btnStatus"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="Mark As Complete"
                               android:fontFamily="sans-serif-black"
                               android:textColor="@color/white"
                               android:layout_gravity="center"
                               android:textStyle="normal"
                               android:textSize="@dimen/_8sdp"/>

                       </com.google.android.material.card.MaterialCardView>
                       <com.google.android.material.card.MaterialCardView
                           android:layout_width="@dimen/_130sdp"
                           android:padding="@dimen/_5sdp"
                           android:layout_margin="@dimen/_3sdp"
                           android:layout_height="@dimen/_25sdp"
                           app:cardCornerRadius="@dimen/_5sdp"
                           app:strokeColor="@color/blue"
                           android:backgroundTint="#4CAF50"
                           android:layout_weight="1"
                           android:layout_marginBottom="@dimen/_10sdp"
                           app:cardElevation="@dimen/_5sdp">

                           <TextView
                               android:id="@+id/btnMessage"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="Message"
                               android:fontFamily="sans-serif-black"
                               android:textColor="@color/white"
                               android:layout_gravity="center"
                               android:textStyle="normal"
                               android:textSize="@dimen/_12sdp"/>

                       </com.google.android.material.card.MaterialCardView>

                   </LinearLayout>


               </LinearLayout>

           </LinearLayout>





    </com.google.android.material.card.MaterialCardView>
</LinearLayout>
