<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:padding="16dp"
    android:orientation="horizontal">

    <!-- Profile Image -->

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_8sdp"
        app:strokeColor="@color/blue"
        android:backgroundTint="@color/white"
        app:cardElevation="@dimen/_5sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



    <ImageView
        android:id="@+id/ivProfile"
        android:layout_width="@dimen/_100sdp"
        android:layout_gravity="center"
        android:layout_height="match_parent"
        android:layout_marginTop="-2dp"
        android:layout_marginBottom="-2dp"
        android:layout_marginEnd="16dp"
        android:scaleType="centerCrop" />

            <!-- Text Content -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Name -->
                <!-- Business Title -->
                <TextView
                    android:id="@+id/tvBusinessTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textStyle="bold"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="@color/black"
                    tools:text="Plumber" />

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    tools:text="John Doe" />

                <!-- Business Description -->
                <TextView
                    android:id="@+id/tvBusinessDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    tools:text="Expert in home plumbing services with 5+ years of experience." />

                <!-- Mobile Number -->
                <TextView
                    android:id="@+id/tvMobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    tools:text="Mobile: +1234567890" />

                <!-- Email -->
                <TextView
                    android:id="@+id/tvEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    tools:text="Email: johndoe@example.com" />

                <!-- Address -->
                <TextView
                    android:id="@+id/tvAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="@dimen/_10sdp"
                    tools:text="Address: 123 Main St, City, Country" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="@dimen/_25sdp"
                    app:cardCornerRadius="@dimen/_5sdp"
                    app:strokeColor="@color/blue"
                    android:backgroundTint="@color/blue"
                    android:layout_marginBottom="@dimen/_10sdp"
                    app:cardElevation="@dimen/_5sdp">

                    <TextView
                        android:id="@+id/btnLogin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Book Service"
                        android:fontFamily="sans-serif-black"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:textStyle="normal"
                        android:textSize="@dimen/_12sdp"/>

                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</LinearLayout>
